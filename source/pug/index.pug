
extends _page-template.pug

block content
  section
    .container.text-center.pt-5
      .sg-homepage__main-image.sg-fancy-frame
        img.rounded(src="http://placehold.it/400x300", alt="")
      .sg-squiggle
        img(src="build/images/squiggle.svg", alt="")
      p.sg-homepage__hed move around
      p.sg-homepage__dek sweetgif helps you capture your weird, wonderful moments.
  section.sg-homepage-intro
    .container.sg-homepage-intro__grid
      .sg-homepage-intro__text
